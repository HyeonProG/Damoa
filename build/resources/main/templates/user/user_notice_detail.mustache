{{>layout/header}}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style type="text/css">
    .notice-title {
        text-align: center;
        margin: 20px 0;
    }
    .notice-list-container {
        width: 80%;
        max-height: 60vh;
        background: white;
        box-shadow: 2px 2px 5px #dee2e6;
        margin: auto;
        padding: 20px;
    }
    .notice-box {
        border: 1px solid #dee2e6;
        border-radius: 10px;
        background: white;
        margin: 10px 0;
        padding: 15px;
        transition: transform 0.2s;
    }
    .notice-box:hover {
        transform: scale(1.02);
    }
</style>

<div class="notice-title">
    <h3>공지사항</h3>
</div>

<div class="notice-list-container">
    {{#notice}}
        <div class="notice-box">
            <h5>{{title}}</h5>
            <p class="text-muted">{{createdAt}}</p>
            <p>{{content}}</p>
            <div class="d-flex justify-content-end">
                <button class="btn btn-primary" onclick="location.href='/notice/1'">목록</button>
            </div>
        </div>
    {{/notice}}
</div>

{{>layout/footer}}
