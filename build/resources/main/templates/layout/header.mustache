            <script>
                function checkPoint(){
                fetch('/user/balance')
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('서버 응답이 올바르지 않습니다.');
                        }
                        return response.text();
                    })
                    .then(data => {
                        console.log("잔액 정보:", data);
                        // 잔액 데이터를 활용하는 로직 추가 가능
                        alert(`프로젝트 등록시 100,000 포인트가 차감이 됩니다.\n현재 보유 포인트는 ` + data + ` 포인트 입니다.`)
                    })
                    .catch(error => {
                        console.error("오류 발생:", error);
                    });
                }
            </script>
