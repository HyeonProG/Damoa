        @import url("https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css");

        body{
            font-family: Pretendard;
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: 'Dongle', sans-serif;
        }
        a,p{
            text-decoration: none;
            color: #8a837d;
            padding-right:3px;
            padding-left:3px;
        }
        h5,h3{
            font-weight: bolder;
            color: #544f4b;
            margin-right: 5px;
            padding-right:5px;
            padding-left:5px;
        }
        hr{
            margin-top:0px;
            margin-bottom:0px;
            padding:0px;
            color: #dfddda;
        }
        footer{
            width:100%;
            padding-top: 20px;
            padding-bottom: 20px;
            background: #dfddda;
            display: flex !important;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        a:hover, h3:hover, h5:hover{
            color: #18A8F1;
        }

        .main{
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .header{
            width: 100%;
        }
        .upper-div{
            width: 100%;
            height: 120px;
            padding: 5px;
            display: flex;
            align-items: center;
            justify-content: space-evenly;
        }
        .title-img{
            width: 200px;
        }
        .search-div{
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .search-box{
            width: 300px;
            height: 40px;
            border: 3px solid #18A8F1;
            border-radius: 25px;
        }
        .search-btn{
            width: 50px;
            border: none;
            background-color: #18A8F1;
            border-radius: 12px;
            padding: 7px;
            padding-right: 7px;
            padding-left: 7px;
            margin: 5px;
            color: white;
            box-shadow: 2px 2px 2px #d0ccc9;
        }
        .login-bar{
            width: 500px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .nav-bar{
            width:80%;
            height: 20px;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: space-around;
        }
        .menu-list{
            width: 80%;
            display: flex;
            align-items: center;
            text-align: center;
            padding-left:110px;
        }
        .menu-icon{
            width: 20px;
            margin-bottom: 2px;
            margin-left:5px;
            margin-right:15px;
        }
        .link{
            margin: 9px;
        }
        .nav-line{
            box-shadow: 2px 2px 5px #d0ccc9;
        }
        .drop-down-menus{
            display:none;
            position : absolute;
            z-index : 1;
        }
        .menu-icon:hover .drop-down-menus {
            display:block;
        }


        .main-board{
        }
        .ad-board{
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            margin-bottom: 20px;
        }
        .ad-outer{
            overflow-x: hidden;
        }
        .ad-inner{
            display: flex;
            transition: .3c ease-out;
        }
        .ad-img{
            margin-left:10px;
            margin-right:10px;
            border-radius: 20px;
        }
        .ad-bar{
            display: flex;
            align-items: center;
            text-align: center;
        }
        .ad-progress{
            width: 130px;
            height: 40px;
            border-radius: 20px;
            box-shadow: 2px 2px 5px #d0ccc9;
            background: #6c6661;
            margin: 10px;
        }
        .ad-progress-text {
            margin-top:10px;
            display: flex;
            text-align: center;
            justify-content: center;
            text-align: center;
            color: white;
        }
        .icons{
            width: 50px;
            margin: 5px;
        }
        .main-board{
            width:100%;
            background-image: linear-gradient(to bottom , white, #f5f4f3);
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        .main-board-box{
            margin: 10px;
            width: 58%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        .main-inner-board{
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: start;
            margin-bottom: 20px;
        }
        .project-container, .freelancer-container{
            width: 100%;
            height: 10%;
            display: flex;
            align-items: center;
            text-align: center;
        }
        .project-box, .freelancer-box{
            border: 1px solid #d0ccc9;
            border-radius: 15px;
            box-shadow: 2px 2px 5px #d0ccc9;
            width: 30%;
            height: 100%;
            padding: 10px;
            margin: 15px;
        }
        .reccomend-asset-container{
            width: 100%;
            height: 10%;
            display: flex;
            align-items: center;
            text-align: center;
        }
        .asset-box{
            border: 1px solid #d0ccc9;
            border-radius: 15px;
            box-shadow: 2px 2px 5px #d0ccc9;
            width: 50%;
            height: 130%;
            padding: 10px;
            margin: 15px;
        }
        .section-bar{
            color: #dfddda;
            margin-left: 5px;
            margin-right: 5px;
        }


    </style>


