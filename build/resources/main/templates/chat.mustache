<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Chatbot</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #resultDiv {
            max-height: 250px; /* 스크롤 가능한 최대 높이 */
            overflow-y: auto; /* 수직 스크롤 활성화 */
            height: 250px; /* 조정된 높이 */
        }

        .right-message {
            text-align: right;
            background-color: #e0f7fa;
            padding: 8px;
            border-radius: 5px;
            margin: 5px 0;
        }

        .left-message {
            text-align: left;
            background-color: #f1f8e9;
            padding: 8px;
            border-radius: 5px;
            margin: 5px 0;
        }

        .chatbot-toggle {
            position: fixed;
            bottom: 20px; /* 화면 아래 위치 */
            right: 20px; /* 화면 오른쪽 위치 */
            z-index: 1000; /* 다른 요소 위에 표시 */
        }

        .sidebar {
            position: fixed; /* 사이드바 고정 */
            bottom: 70px; /* 버튼 위로 올라오게 설정 */
            right: 20px; /* 오른쪽 고정 */
            width: 400px; /* 사이드바 너비 */
            background-color: white; /* 사이드바 배경색 */
            border-left: 1px solid #ccc; /* 왼쪽 경계선 */
            box-shadow: -2px -2px 5px rgba(0, 0, 0, 0.5); /* 그림자 효과 */
            display: none; /* 기본적으로 숨김 */
            flex-direction: column; /* 세로 정렬 */
            max-height: 500px; /* 최대 높이 설정 */
            border-top-left-radius: 10px; /* 모서리 둥글게 */
            border-top-right-radius: 10px; /* 모서리 둥글게 */
            overflow: hidden; /* 내용이 넘칠 경우 숨김 */
        }

        .sidebar-header {
            padding: 10px;
            border-bottom: 1px solid #ccc; /* 하단 경계선 */
        }

        .sidebar-footer {
            padding: 10px;
            border-top: 1px solid #ccc; /* 상단 경계선 */
        }
    </style>
</head>
<body>

<!-- 결제하기 버튼 -->
<a href="/toss/pay" class="btn btn-primary">결제하기</a>

<!-- 채팅 사이드바 버튼 -->
<div class="chatbot-toggle">
    <button type="button" class="btn btn-info" id="toggleChatSidebar">
        다모봇
    </button>
</div>

<!-- 채팅 사이드바 -->
<div class="sidebar" id="chatSidebar">
    <div class="sidebar-header">
        <h5 class="modal-title" id="chatModalLabel">다모봇</h5>
        <button type="button" class="close" id="closeChatSidebar" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div id="in--wrap">
            <div id="resultDiv" class="border p-3 mb-4"></div>

            <form id="chatForm">
                <div class="form-group">
                    <label for="message"></label>
                    <input type="text" class="form-control" id="message" name="message" placeholder="메시지를 입력하세요"
                           required>
                </div>
                <button type="submit" class="btn btn-success">입력</button>
            </form>
        </div>
    </div>
    <div class="sidebar-footer">
        <button type="button" class="btn btn-secondary" id="closeChatSidebar">닫기</button>
    </div>
</div>

<!-- jQuery, Popper.js, Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="/js/chatBot.js"></script>
<script>
    // 사이드바 토글 기능
    document.getElementById('toggleChatSidebar').addEventListener('click', function () {
        document.getElementById('chatSidebar').style.display = 'flex';
    });

    // 사이드바 닫기 기능
    document.getElementById('closeChatSidebar').addEventListener('click', function () {
        document.getElementById('chatSidebar').style.display = 'none';
    });
</script>
</body>
</html>
