{{> layout/header}}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    .sub-header {
        color: #007BFF;
        font-size: 1rem;
    }

    .review-title {
        color: #007BFF;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
    }

    .first-banner {
        width: 100%; /* 원하는 너비로 조정 */
        height: 270px; /* 원하는 높이로 조정 */
        object-fit: cover; /* 이미지 비율 유지 */
        border-radius: 10px; /* 둥근 모서리 추가 */
        margin-top: 30px;
        margin-bottom: 60px; /* 이미지 하단 여백 */
    }

    .scroll-container {
        display: flex;
        overflow: hidden; /* 수평 스크롤 숨김 */
        width: 100%;
        position: relative;
        margin-bottom: 80px; /* 각 섹션 아래 여백 추가 */
    }

    .scroll-content {
        display: flex;
        transition: transform 50s linear; /* 애니메이션 속도 및 선형 */
        animation: scroll 50s linear infinite; /* 카드 애니메이션 추가 */
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%); /* 이동 거리 조정 */
        }
    }

    .card {
        width: 250px; /* 카드 너비 조정 */
        margin-right: 20px; /* 카드 간격 조정 */
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        background-color: #f8f9fa;
        border-radius: 15px;
        text-align: center;
    }

    .btn-review {
        background-color: #007BFF;
        color: white;
        border-radius: 0 0 15px 15px;
        transition: background-color 0.3s;
    }

    .btn-review:hover {
        background-color: #0056b3;
    }
    .second-banner {
        width: 100%; /* 너비를 줄여서 크기 비율 축소 */
        height: 180px;
        border-radius: 10px; /* 둥근 모서리 추가 */
        object-fit: cover; /* 이미지 비율 유지 */
        margin-bottom: 60px; /* 이미지 하단 여백 */
    }
    .third-banner {
        width: 100%; /* 원하는 너비로 조정 */
        height: 150px; /* 원하는 높이로 조정 */
        object-fit: cover; /* 이미지 비율 유지 */
        border-radius: 10px; /* 둥근 모서리 추가 */
        margin-top: 30px;
        margin-bottom: 60px; /* 이미지 하단 여백 */
    }
</style>

<div class="container mt-4">
    <img src="/images/banner/review-banner.png" class="first-banner">

    <!-- 기업 리뷰 섹션 -->
    <section class="mt-4">
        <img src="/images/banner/company-review-banner.png" class="second-banner">
        <div class="scroll-container">
            <div class="scroll-content" id="company-scroll-content">
                {{#companyReviews}}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{freelancerName}}</h5>
                            <h6>프리랜서에 대한 리뷰</h6>
                            <hr>
                            <p class="text-muted">종합 평점: {{overallScore}}점</p>
                            <p class="card-text">{{responseData}}</p>
                        </div>
                        <button class="btn btn-review btn-block" onclick="location.href='/reviews/list/company'">리뷰 더보기</button>
                    </div>
                {{/companyReviews}}
            </div>
        </div>
    </section>

    <img src="/images/banner/freelancer-review-banner.png" class="third-banner">

    <!-- 프리랜서 리뷰 섹션 -->
    <section class="mt-4">
        <div class="scroll-container">
            <div class="scroll-content" id="freelancer-scroll-content">
                {{#freelancerReviews}}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{companyName}}</h5>
                            <h6>기업에 대한 리뷰</h6>
                            <hr>
                            <p class="text-muted">종합 평점: {{overallScore}}점</p>
                            <p class="card-text">{{responseData}}</p>
                        </div>
                        <button class="btn btn-review btn-block" onclick="location.href='/reviews/list/freelancer'">리뷰 더보기</button>
                    </div>
                {{/freelancerReviews}}
            </div>
        </div>
    </section>
</div>

{{> layout/footer}}
