{{> layout/header}}

<div class="container">
    <h1>프리랜서 기본 정보 업데이트</h1>

    <form action="/freelancer/update-basic-info" method="post" enctype="multipart/form-data">
    <!-- 직무 -->
        <div class="form-group">
            <label for="jobPart">직무</label>
            <select class="form-control" id="jobPart" name="jobPart" value="{{jobPart}}" required>
                <option value="">직무 선택</option>
                <option value="풀스택">풀스택</option>
                <option value="프론트엔드">프론트엔드</option>
                <option value="백엔드">백엔드</option>
                <option value="모바일 개발">모바일 개발</option>
                <option value="데브옵스">데브옵스</option>
                <option value="UI/UX 디자인">UI/UX 디자인</option>
                <option value="게임 개발">게임 개발</option>
                <option value="데이터베이스 관리">데이터베이스 관리</option>
                <option value="클라우드 엔지니어링">클라우드 엔지니어링</option>
                <option value="AI/머신러닝">AI/머신러닝</option>
            </select>
        </div>
    <!-- 근무 방식 -->
        <div class="form-group">
            <label for="workingStyle">근무 방식</label>
            <select class="form-control" id="workingStyle" name="workingStyle" value="{{workingStyle}}" required>
                <option value="">근무 방식 선택</option>
                <option value="재택 근무">재택 근무</option>
                <option value="출퇴근">출퇴근</option>
                <option value="파트타임">파트타임</option>
                <option value="풀타임">풀타임</option>
            </select>
        </div>
        
    <!-- 희망 연봉 -->
    <div>
        <label for="expectedSalary">희망 연봉</label>
        <input type="number" name="expectedSalary" id="expectedSalary" min="1" max="1000000" value="" oninput="validateSalary(this)">
        만 원
    </div>
    <!-- 급여 방식 -->    
        <div class="form-group">
            <label for="salaryType">급여 방식</label>
            <select class="form-control" id="salaryType" name="salaryType" value="{{salaryType}}" required>
                <option value="시급">시급</option>
                <option value="월급">월급</option>
                <option value="프로젝트">프로젝트</option>
            </select>
        </div>
    <!-- 포트폴리오 -->  
        <div class="form-group">
            <label for="originFileName">포트폴리오</label>
            <input type="file" id="originFileName" name="mFile">
        </div>
    <!-- 상세 소개 -->  
        <div class="form-group">
            <label for="detail">상세 소개</label>
            <textarea class="form-control" id="detail" name="detail" rows="4" value="{{detail}}" required></textarea>
        </div>
    <!-- 링크 -->  
        <div class="form-group">
            <label for="link">링크</label>
            <input type="url" class="form-control" id="link" name="link" value="{{link}}">
        </div>
        <input type="hidden" name="userId" value="{{userId}}">
        <button type="submit" class="btn btn-primary">저장</button>
    </form>
</div>

<script>
    function validateSalary(input) {
        const maxValue = 1000000;
        if (input.value > maxValue) {
            input.value = maxValue; // 최대값으로 설정
            alert("희망 연봉은 최대 1,000,000까지 입력할 수 있습니다.");
        }
    }
</script>

{{> layout/footer}}
