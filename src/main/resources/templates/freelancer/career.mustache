{{> layout/header}}

<div class="container">
    <!-- 사이드바 -->
    {{> layout/mypage}}

    <!-- 메인 콘텐츠 -->
    <div class="main-content">
        <h1>프리랜서 경력 관리</h1>

        <div class="card">
            <div class="card-header">
                <h5>등록된 경력</h5>
            </div>
            <div class="card-body">
                <ul>
                    {{#freelancerCareers}}
                    <li>{{career}} 
                        <!-- 경력 삭제 버튼 -->
                        <form action="/freelancer/delete-career" method="post" style="display: inline;">
                            <input type="hidden" name="careerId" value="{{id}}">
                            <button type="submit">삭제</button>
                        </form>
                    </li>
                    {{/freelancerCareers}}
                    {{^freelancerCareers}}
                    <li>등록된 경력이 없습니다.</li>
                    {{/freelancerCareers}}
                </ul>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>경력 추가</h5>
            </div>
            <div class="card-body form-container">
                <!-- 경력 추가 폼 -->
                <form action="/freelancer/insert-career" method="post">
                    <label for="career">추가할 경력:</label>
                    <select name="careerId" id="career" required>
                        <option value="">경력 선택</option>
                        {{#careers}}
                        <option value="{{id}}">{{career}}</option>
                        {{/careers}}
                    </select>
                    <button type="submit">추가</button>
                </form>
            </div>
        </div>
    </div>
</div>

{{> layout/footer}}
