{{> layout/header }}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        width: 100%;
        min-height: 100vh;
        margin-top: 70px;
        padding-bottom: 20px;
    }

    .sidebar {
        width: 300px;
        background-color: #ffffff;
        padding: 20px;
        border-right: 1px solid #ddd;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        flex-shrink: 0;
    }

    .sidebar h2 {
        font-size: 20px;
        color: #333;
        margin-bottom: 20px;
    }

    .sidebar a {
        display: block;
        padding: 15px 20px;
        margin-bottom: 10px;
        color: #333;
        text-decoration: none;
        border-radius: 5px;
        background-color: #f9f9f9;
        font-size: 16px;
        transition: background-color 0.2s;
    }

    .sidebar a:hover {
        background-color: #e9ecef;
        color: #007bff;
    }

    .content {
        flex-grow: 1;
        padding: 40px;
        background-color: #fff;
        min-height: 100vh;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .content h1 {
        font-size: 26px;
        margin-bottom: 20px;
        text-align: center;
        color: #333;
    }

    .completed-projects {
        margin-top: 20px;
    }

    .project-list {
        margin-bottom: 30px;
    }

    .project-item {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .project-item:hover {
        background-color: #f1f1f1;
    }

    .project-item h6 {
        font-size: 20px;
        margin: 0;
        color: #333;
    }

    .actions {
        display: flex;
        gap: 10px;
        margin-top: 20px;
        justify-content: center;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        color: white;
        transition: background-color 0.3s;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .text-muted {
        color: #888;
        text-align: center;
    }
</style>

<div class="container">
    <!-- 사이드바 - 프리랜서 전용 메뉴 -->
    {{> layout/mypage}}

    <!-- 메인 컨텐츠 -->
    <div class="content">
        <h1>완료된 프로젝트</h1>
        <div class="completed-projects">
            <div class="project-list">
                {{#projectListForPaging2}}
                    <div class="project-item" onclick="location.href='/project/detail/{{id}}'">
                        <h6>{{projectName}}</h6>
                        <div class="actions">
                            <button class="btn btn-primary" onclick="location.href='project/my-project/detail/{{id}}'">상세보기</button>
                            <button class="btn btn-secondary" onclick="confirmReview()">리뷰 남기기</button>
                        </div>
                    </div>
                {{/projectListForPaging2}}
            </div>
        </div>
    </div>
</div>

<script>
    function confirmReview() {
        const userConfirmed = confirm("리뷰를 작성하시겠습니까?");
        if (userConfirmed) {
            location.href = 'https://forms.gle/2v4qaBnYPo2esVBs6';
        }
    }
</script>

{{> layout/footer }}
