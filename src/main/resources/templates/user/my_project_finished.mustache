{{> layout/header }}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        width: 100%;
        min-height: 100vh;
        background-color: #f5f5f5;
        margin-top: 70px;
        padding-bottom: 20px;
    }

    .sidebar {
        width: 300px;
        background-color: #fff;
        padding: 20px;
        border-right: 1px solid #ddd;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        flex-shrink: 0;
    }

    .sidebar h2 {
        font-size: 20px;
        color: #333;
        margin-bottom: 20px;
    }

    .sidebar a {
        display: block;
        padding: 15px 20px;
        margin-bottom: 10px;
        color: #333;
        text-decoration: none;
        border-radius: 5px;
        background-color: #f9f9f9;
        font-size: 16px;
    }

    .sidebar a:hover {
        background-color: #e9ecef;
        color: #007bff;
    }

    .content {
        flex-grow: 1;
        padding: 40px;
        background-color: #fff;
        min-height: 100vh;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-left: 0;
    }

    .content h1 {
        font-size: 26px;
        margin-bottom: 20px;
    }

    .user-info, .edit-info {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .user-info p, .edit-info p {
        font-size: 16px;
        margin: 10px 0;
    }

    .edit-info {
        display: none;
    }

    .edit-info input {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }

    .actions {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    /* a.purchase--btn에 버튼 스타일 적용 */
.purchase--btn {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    color: #fff;
    background-color: #007BFF;
    text-decoration: none;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s;
}

    .purchase--btn:hover {
        background-color: #0056b3;
    }

    .purchase--btn:active {
        background-color: #004085;
    }

</style>
<div class="container">
    <!-- 사이드바 - 프리랜서 전용 메뉴 -->
    {{> layout/mypage}}
    <!-- 메인 컨텐츠 -->
    <div class="content">
        <h1>프로젝트 목록</h1>

        <div>
            <h4>완료된 프로젝트</h4>
            {{#projectListForPaging2}}
                <div onclick="project/my-project/detail/{{id}}">
                    <h6>{{projectName}}</h6>
                </div>
            {{/projectListForPaging2}}
        </div>
    </div>
</div>

<script>
    document.getElementById("editButton").addEventListener("click", function() {
        document.querySelector(".user-info").style.display = "none";
        document.querySelector(".edit-info").style.display = "block";
    });

    document.getElementById("cancelButton").addEventListener("click", function() {
        document.querySelector(".edit-info").style.display = "none";
        document.querySelector(".user-info").style.display = "block";
    });

    document.querySelectorAll('.purchase--btn').forEach(function(btn) {
    btn.addEventListener('click', function(event) {
        event.preventDefault();
        if (confirm("포인트를 충전하시겠습니까?")) {
            newWindow = window.open('/toss/store', '_blank', 'width=650,height=650');
        }
    });
});

</script>

