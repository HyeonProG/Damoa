{{>layout/header}}
<style type="text/css">
    .notice-title{
        width: 90%;
        height: 20vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .notice-list-container{
        width: 80%;
        height: 60vh;
        border: 1px solid gray;
        border-radius: 10px;
        background: white;
        box-shadow: 2px 2px 5px #dee2e6;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .notice-box{
        width: 90%;
        border: 1px solid gray;
        border-radius: 10px;
        background: white;
        box-shadow: 2px 2px 5px #dee2e6;
        margin: 10px;
        padding: 10px;
    }
</style>

<div class="notice-title">
    <h3>공지사항 더보기</h3>
</div>

<div class="notice-list-container">
    {{#notice}}
    <div class="notice-box">
            <h5>{{id}}</h5>
            <h5>{{title}}</h5>
            <p>{{createdAt}}</p>
            <h5>{{content}}</h5>
        <button onclick="location.href='/notice/1'">목록</button>
    </div>
    {{/notice}}

</div>

{{>layout/footer}}