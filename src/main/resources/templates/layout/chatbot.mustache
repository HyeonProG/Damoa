<!-- Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    #resultDiv {
        max-height: 250px;
        overflow-y: auto;
        height: 250px;
    }

    .right-message {
        text-align: right;
        background-color: #e0f7fa;
        padding: 8px;
        border-radius: 5px;
        margin: 5px 0;
    }

    .left-message {
        text-align: left;
        background-color: #f1f8e9;
        padding: 8px;
        border-radius: 5px;
        margin: 5px 0;
    }

    .chatbot-toggle {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
    }

    .sidebar {
        position: fixed;
        bottom: 70px;
        right: 20px;
        width: 400px;
        background-color: white;
        border-left: 1px solid #ccc;
        box-shadow: -2px -2px 5px rgba(0, 0, 0, 0.5);
        display: none;
        flex-direction: column;
        max-height: 500px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        overflow: hidden;
    }

    .sidebar-header {
        padding: 10px;
        border-bottom: 1px solid #ccc;
    }

    .sidebar-footer {
        padding: 10px;
        border-top: 1px solid #ccc; /* 상단 경계선 */
    }
</style>

<!-- 결제하기 버튼 -->
<a href="/toss/pay" class="btn btn-primary">결제하기</a>

<!-- 채팅 사이드바 버튼 -->
<div class="chatbot-toggle">
    <div class="chatbot-toggle">
        <button type="button" class="btn btn-info rounded-circle shadow-lg" id="toggleChatSidebar">
            <img src="images/icons/moabot.png" alt="모아봇" style="width: 30px; height: 30px;">
        </button>
    </div>
</div>

<!-- 채팅 사이드바 -->
<div class="sidebar" id="chatSidebar">
    <div class="sidebar-header">
        <h5 class="modal-title" id="chatModalLabel">모아봇</h5>
        <button type="button" class="close" id="closeChatSidebar" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div id="in--wrap">
            <div id="resultDiv" class="border p-3 mb-4"></div>

            <form id="chatForm">
                <div class="form-group">
                    <label for="message"></label>
                    <input type="text" class="form-control" id="message" name="message" placeholder="메시지를 입력하세요"
                           required>
                </div>
                <button type="submit" class="btn btn-success">입력</button>
            </form>
        </div>
    </div>
    <div class="sidebar-footer">
        <button type="button" class="btn btn-secondary" id="closeChatSidebar">닫기</button>
    </div>
</div>

<!-- jQuery, Popper.js, Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="/js/chatBot.js"></script>
<script>
    // 사이드바 토글 기능
    document.getElementById('toggleChatSidebar').addEventListener('click', function () {
        document.getElementById('chatSidebar').style.display = 'flex';
    });

    // 사이드바 닫기 기능
    document.getElementById('closeChatSidebar').addEventListener('click', function () {
        document.getElementById('chatSidebar').style.display = 'none';
    });
</script>
