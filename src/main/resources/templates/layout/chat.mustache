<script src="https://cdnjs.cloudflare.com/ajax/libs/sockjs-client/1.5.0/sockjs.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/stomp.js/2.3.3/stomp.min.js"></script>
<script>
    let selectedSenderId = '';  // í´ë¦­ ëœ ëŒ€í™” ëª©ë¡ì˜ senderId, receiverId ì €ì¥ì„ ìœ„í•œ ë³€ìˆ˜
    let selectedReceiverId = '';

    // ë©”ì‹œì§€ ë°•ìŠ¤ ìƒì„± í•¨ìˆ˜
    function createMessageBox(message, isSender) {
        const className = isSender ? 'message-right' : 'message-left';
        return `<div class='message ${className}'>${message}</div>`;
    }

    // 3. SockJS WebSocket ì—°ê²° ì„¤ì •
    const socket = new SockJS('http://localhost:8080/ws');      // ì„œë²„ configì—ì„œ ì„¤ì •í•œ ì—”ë“œí¬ì¸íŠ¸
    const stompClient = Stomp.over(socket); // SockJSë¥¼ STOMP í´ë¼ì´ì–¸íŠ¸ë¡œ ê°ì‹¸ê¸°

    // 4. webSoket ì—°ê²°
    function connect() {
        stompClient.connect({}, function (frame) {
            console.log('ì—°ê²° ìƒíƒœ: ' + frame);

            stompClient.subscribe('/topic/messages/' + selectedReceiverId, function (message) {
                console.log('connect data:   1111  '+ message );
                const chatMessage = JSON.parse(message.body);
                console.log("ìˆ˜ì‹ ëœ ë©”ì‹œì§€:", chatMessage);

                // ì†¡ì‹ ì í™•ì¸ í›„ ë©”ì‹œì§€ í‘œì‹œ
                const isSender = chatMessage.senderId === selectedSenderId;
                const messageBox = createMessageBox(chatMessage.message, isSender);

                const messagesDiv = document.getElementById('messages');
                
                messagesDiv.insertAdjacentHTML('afterbegin', messageBox); // ìƒˆë¡œìš´ ë©”ì‹œì§€ë¥¼ ë§¨ ìœ„ì— ì¶”ê°€
                messagesDiv.scrollTop = messagesDiv.scrollHeight; // ìŠ¤í¬ë¡¤ì„ ë§¨ ì•„ë˜ë¡œ ì´ë™
            });
         });
    }

    // ì±„íŒ… ë©”ì‹œì§€ ì „ì†¡
    function sendMessage() {
        const messageInput = document.getElementById("message");
        const message = messageInput.value.trim();

        console.log(`ë©”ì‹œì§€ ë³´ë‚´ê¸° ì „ì†¡: ${message} from ${selectedSenderId} to ${selectedReceiverId}`);

        if (message) {
            stompClient.send(`/app/chat/${selectedSenderId}/${selectedReceiverId}`, {}, JSON.stringify({
                'message': message,
                'senderId': selectedSenderId,
                'receiverId': selectedReceiverId
            }));
            messageInput.value = "";
        }
    }

    // ë©”ì‹œì§€ Enter í‚¤ë¡œ ì…ë ¥
    document.getElementById("message").addEventListener("keypress", function(event) {
        if (event.key === "Enter") {
            sendMessage();
            event.preventDefault();
        }
    });

    // 1. ì±„íŒ… ëª©ë¡ ê°€ì ¸ì˜¤ê¸°
    function fetchChatList() {
        fetch('/match/chat-list', {
            method: 'GET',
            credentials: 'include'
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('ë„¤íŠ¸ì›Œí¬ ì‘ë‹µì´ ì •ìƒì ì´ì§€ ì•ŠìŠµë‹ˆë‹¤.');
            }
            return response.json();
        })
        .then(data => {
            console.log('ì±„íŒ…ëª©ë¡ ê°€ì ¸ì˜¤ê¸°:', data); // ë°ì´í„° ë¡œê·¸ ì¶”ê°€
            const chatListContainer = document.getElementById('chat-list-items');
            chatListContainer.innerHTML = '';

            data.forEach(chat => {
                const chatItem = document.createElement('div');
                chatItem.className = 'chat-item';
                chatItem.innerHTML = `<p>${chat.receiver}ë‹˜ê³¼ì˜ ì±„íŒ…</p>`;
                chatItem.onclick = () => {

                    // ëª©ë¡ í´ë¦­ì‹œ í´ë¦­ ëœ listì˜ id ê°’ ì „ì—­ ë³€ìˆ˜ì— ì €ì¥
                    selectedSenderId = chat.chatList.senderId;
                    selectedReceiverId = chat.chatList.receiverId;

                    // ì±„íŒ…ë°© ì—´ê¸° @param senderId, receiverId, receiverName
                    openChatRoom(selectedSenderId, selectedReceiverId, chat.receiver);
                };
                chatListContainer.appendChild(chatItem);
            })
        })
        .catch(error => console.error('ì˜ëª» ëœ ì ‘ê·¼ ì…ë‹ˆë‹¤.:', error));
    }

    // 2. ì±„íŒ…ë°© ì—´ê¸°
    function openChatRoom(senderId, receiverId, receiverName) {

        console.log('ì±„íŒ…ë°© ì—´ê¸° senderId:', senderId, 'receiverId:', receiverId, 'receiverName:', receiverName);

        // ì±„íŒ…ë°© ì œëª© ì—…ë°ì´íŠ¸
        document.getElementById('chat-header').textContent = `${receiverName}ë‹˜ê³¼ì˜ ì±„íŒ…`;

        // ì±„íŒ…ë°© ì—´ê¸°ì‹œ display ì´ë²¤íŠ¸ë“¤
        document.getElementById('chat-room').style.display = 'block';
