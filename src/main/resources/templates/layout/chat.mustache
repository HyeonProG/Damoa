        fetchChatList();
    }

    // ë’¤ë¡œê°€ê¸° ë²„íŠ¼ í´ë¦­ ì‹œ ì±„íŒ…ë°© ë‹«ê¸°
    document.getElementById('back-button').onclick = function() {
         // ì´ì „ ë©”ì‹œì§€ í´ë¦¬ì–´
        document.getElementById('messages').innerHTML = ''; // ì´ì „ ì±„íŒ… ë©”ì‹œì§€ ë‚´ì—­ ì´ˆê¸°í™”
        document.getElementById('chat-room').style.display = 'none';
