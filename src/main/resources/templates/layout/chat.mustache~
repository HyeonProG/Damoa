<body>
<div class="navbar">
    <button class="chat-icon" id="chat-icon" onclick="showChatRoom()">💬</button> <!-- 채팅 아이콘 -->
</div>

<div id="chat-room"> <!-- 채팅방 -->
    <div class="back-bar">
        <button id="back-button">←</button> <!-- 뒤로가기 텍스트 버튼 -->
        <p>김기석님과의 채팅</p>
    </div>
    <div id="messages"></div> <!-- 메시지 로그 -->
</div>

<!-- 메시지 입력 그룹 고정 위치 -->
<div class="input-group" id="input-group"> <!-- ID 추가 -->
    <input type="text" id="message" class="form-control" placeholder="메시지를 입력하세요..." />
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/sockjs-client/1.5.0/sockjs.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/stomp.js/2.3.3/stomp.min.js"></script>
<script>
    const companyId = prompt("내 아이디 입력:"); // 클라이언트 ID 입력
    const freelancerId = prompt("상대방 아이디 입력:"); // 프리랜서 ID 입력
    const socket = new SockJS('/ws');
    const stompClient = Stomp.over(socket);

    function connect() {
        stompClient.connect({}, function (frame) {
            console.log('Connected: ' + frame);
            stompClient.subscribe('/topic/messages', function (message) {
                const chatMessage = JSON.parse(message.body);
                // 메시지 박스 스타일 결정
                const messageBox = chatMessage.companyId === companyId
                    ? `<div class='message message-right'>${chatMessage.message}</div>` // 자신의 메시지
                    : `<div class='message message-left'><strong>${chatMessage.companyId}:</strong> ${chatMessage.message}</div>`; // 상대방의 메시지

                // 메시지 추가
                const messagesDiv = document.getElementById('messages');
                messagesDiv.insertAdjacentHTML('afterbegin', messageBox);
                messagesDiv.scrollTop = messagesDiv.scrollHeight; // 스크롤을 아래로
            });
        });
    }

    function sendMessage() {
        const messageInput = document.getElementById("message");
        const message = messageInput.value.trim(); // 입력된 메시지
        if (message) {
            stompClient.send("/app/chat/" + companyId + "/" + freelancerId, {}, JSON.stringify({ 'message': message, 'companyId': companyId }));
            messageInput.value = ""; // 입력란 비우기
        }
    }

    // Enter 키로 메시지 전송
    document.getElementById("message").addEventListener("keypress", function(event) {
        if (event.key === "Enter") { // Enter 키가 눌리면
            sendMessage(); // 메시지 전송 함수 호출
            event.preventDefault(); // 기본 Enter 동작 방지
        }
    });

    // 채팅방 표시 함수
    function showChatRoom() {
        const chatRoom = document.getElementById('chat-room');
        const inputGroup = document.getElementById('input-group');
        chatRoom.style.display = 'block'; // 채팅방 표시
        inputGroup.style.display = 'flex'; // 입력 그룹 표시
        document.getElementById('chat-icon').style.display = 'none'; // 채팅 아이콘 숨기기
    }

    // 뒤로가기 버튼 클릭 시
    document.getElementById('back-button').onclick = function() {
        const chatRoom = document.getElementById('chat-room');
        const inputGroup = document.getElementById('input-group');
        chatRoom.style.display = 'none'; // 채팅방 숨기기
        inputGroup.style.display = 'none'; // 입력 그룹 숨기기
        document.getElementById('chat-icon').style.display = 'block'; // 채팅 아이콘 보이기
    }

    connect(); // 웹소켓 연결
</script>
</body>
</html>
