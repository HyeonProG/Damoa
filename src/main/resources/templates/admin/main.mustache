<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Damoa</title>

    <!-- css -->
    <style type="text/css">
        body {
            padding: 0;
            margin: 0;
            width: 100%;
            height: 100vh;
            background:#d0ccc9;
        }
        header {
            width: 17%;
            height: 100%;
            padding-top: 30px;
            padding: 10px;
            box-shadow: 2px 2px 5px #dee2e6;
            background: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        a {
            text-decoration: none;
        }
        hr {
            background: #d0ccc9;
            height:1px;
        }
        button {
            margin: 10px;
            padding: 7px;
            border: none;
            border-radius: 10px;
            color: white;
            background-color: #07a0c3
        }
        .main {
            width: 100%;
            height: 100%;
            display: flex;
            background:#f1f3f5;
        }
        .title-div {
            display: flex;
            align-items: center;
            background: white;
            height: 50px;
            box-shadow: 2px 2px 5px #dee2e6;
        }
        .main-board {
            width: 100%;
        }
        .main-box, .row {
            width: 95%;
            margin-top: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .main-box {
            flex-direction: column;
        }
        .first-row-box {
            border: 1px solid #dee2e6;
            margin: 10px;
            border-radius: 5px;
            background: white;
            width: 30%;
            height: 30vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        .second-row-box {
            border: 1px solid #dee2e6;
            margin: 10px;
            border-radius: 5px;
            background: white;
            width: 45%;
            height: 30vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
    </style>

    <!-- js libraries -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>

<div class="main">
    <header>
        <h3>Damoa</h3>
        <h5>Dashboards</h5>
        <hr>
        <h5><a href="">회원 관리</a></h5>
        <hr>
        <h5><a href="">매칭 관리</a></h5>
        <hr>
        <h5><a href="">결제 관리</a></h5>
        <hr>
        <h5><a href="">정산 관리</a></h5>
        <hr>
        <h5><a href="">광고 관리</a></h5>
        <hr>
        <h5><a href="">고객 지원</a></h5>
    </header>

    <div class="main-board">
        <div class="title-div">
            <h3>My Dashboard</h3>
            <hr>
        </div>
        <div class="title-div">
            <button>+ New chart</button>
            <button>Copy URL</button>
            <hr>
        </div>
        <div class="main-box">
            <div class="row">
                <div class="first-row-box">
                    <h5>Visitors</h5>
                    <hr>
                    <canvas id="visitorsChart"></canvas>
                </div>
                <div class="first-row-box">
                    <h5>Number of register</h5>
                    <hr>
                    <canvas id="registerChart"></canvas>
                </div>
                <div class="first-row-box">
                    <h5>total Interest</h5>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="second-row-box">
                    <h5>프로젝트 등록 수</h5>
                </div>
                <div class="second-row-box">
                    <h5>프리랜서 등록 수</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 차트를 위한 스크립트 -->
<script>
    // 방문자 차트 생성
    var visitorsChartCtx = document.getElementById('visitorsChart').getContext('2d');
    var visitorsChart = new Chart(visitorsChartCtx, {
        type: 'line', // 차트 타입 (line, bar 등)
        data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'], // X축 라벨
            datasets: [{
                label: 'Visitors',
                data: [65, 59, 80, 81, 56, 55, 40], // 데이터 값
                backgroundColor: 'rgba(75, 192, 192, 0.2)', // 차트 배경색
                borderColor: 'rgba(75, 192, 192, 1)', // 차트 선 색상
                borderWidth: 1 // 차트 선 두께
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true // Y축 0부터 시작
                }
            }
        }
    });

    // 회원 등록 차트 생성
    var registerChartCtx = document.getElementById('registerChart').getContext('2d');
    var registerChart = new Chart(registerChartCtx, {
        type: 'bar', // 차트 타입 (bar)
        data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'], // X축 라벨
            datasets: [{
                label: 'Number of Register',
                data: [30, 45, 70, 50, 60, 90, 100], // 데이터 값
                backgroundColor: 'rgba(153, 102, 255, 0.2)', // 차트 배경색
                borderColor: 'rgba(153, 102, 255, 1)', // 차트 선 색상
                borderWidth: 1 // 차트 선 두께
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true // Y축 0부터 시작
                }
            }
        }
    });
</script>

</body>
</html>
