<!-- 차트를 위한 스크립트 -->
<script>
    // 방문자 차트 생성
    var visitorsChartCtx = document.getElementById('visitorsChart').getContext('2d');
    var visitorsChart = new Chart(visitorsChartCtx, {
        type: 'line', // 차트 타입 (line, bar 등)
        data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'], // X축 라벨
            datasets: [{
                label: 'Visitors',
                data: [65, 59, 80, 81, 56, 55, 40], // 데이터 값
                backgroundColor: 'rgba(75, 192, 192, 0.2)', // 차트 배경색
                borderColor: 'rgba(75, 192, 192, 1)', // 차트 선 색상
                borderWidth: 1 // 차트 선 두께
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true // Y축 0부터 시작
                }
            }
        }
    });

    // 회원 등록 차트 생성
    var registerChartCtx = document.getElementById('registerChart').getContext('2d');
    var registerChart = new Chart(registerChartCtx, {
        type: 'bar', // 차트 타입 (bar)
        data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'], // X축 라벨
            datasets: [{
                label: 'Number of Register',
                data: [30, 45, 70, 50, 60, 90, 100], // 데이터 값
                backgroundColor: 'rgba(153, 102, 255, 0.2)', // 차트 배경색
                borderColor: 'rgba(153, 102, 255, 1)', // 차트 선 색상
                borderWidth: 1 // 차트 선 두께
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true // Y축 0부터 시작
                }
            }
        }
    });
</script>

